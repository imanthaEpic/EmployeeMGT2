<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>EmployeLoginServlet</servlet-name>
        <servlet-class>servlets.EmployeLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>servlets.EmployeeLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeRegisterServlet</servlet-name>
        <servlet-class>servlets.EmployeeRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeLogoutServlet</servlet-name>
        <servlet-class>servlets.EmployeeLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeUpdateServlet</servlet-name>
        <servlet-class>servlets.EmployeeUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeDeleteServlet</servlet-name>
        <servlet-class>servlets.EmployeeDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>servlets.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeDataServlet</servlet-name>
        <servlet-class>servlets.EmployeeDataServlet</servlet-class>
        <multipart-config>
            <max-file-size>1048576</max-file-size>
            <max-request-size>2097152</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>EmployeeDetailsServlet</servlet-name>
        <servlet-class>servlets.EmployeeDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>servlets.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeLoginServlet</servlet-name>
        <url-pattern>/EmployeLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/EmployeeLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeRegisterServlet</servlet-name>
        <url-pattern>/EmployeeRegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeLogoutServlet</servlet-name>
        <url-pattern>/EmployeeLogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeUpdateServlet</servlet-name>
        <url-pattern>/EmployeeUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeDeleteServlet</servlet-name>
        <url-pattern>/EmployeeDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeDataServlet</servlet-name>
        <url-pattern>/EmployeeDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeDetailsServlet</servlet-name>
        <url-pattern>/EmployeeDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/ReportServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
